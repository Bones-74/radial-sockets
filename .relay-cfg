app
{
  update_timer 10
  webserver_port 30080
  location -1.82:52.9
}

board
{
  name b1
  type ada_ft232h
  #type SIM
  port /dev/ttyUSB0
  num-chan 16
}

socket
{
  name SnugLHS
  control_pwr
  {
     board b1
     channel 08
     sense active-low
  }
  monitor_socket
  {
     board b1
     channel 04
     sense active-low
  }
  monitor_hw_ovr_on
  {
     board b1
     channel 05
  }
  # on at 30mins before sunrise; random 5mins (27:30 - 32:30) if before 8am (or at 08:00)
  # on at 30mins before sunset; random 5mins (27:30 - 32:30) if after 17:00 (or at 17:00)
  # on at 30mins before sunset; random 5mins (27:30 - 32:30) if > 17:00
  states
  [
    0 on @  ss-00:30
    1 off @  23:50
  ]
}

socket
{
  name SnugRHS
  control_pwr
  {
     board b1
     channel 09
     sense active-low
  }
  monitor_socket
  {
     board b1
     channel 06
     sense active-low
  }
  monitor_hw_ovr_on
  {
     board b1
     channel 07
     sense active-low
  }
  # on at 30mins before sunrise; random 5mins (27:30 - 32:30) if before 8am (or at 08:00)
  # on at 30mins before sunset; random 5mins (27:30 - 32:30) if after 17:00 (or at 17:00)
  # on at 30mins before sunset; random 5mins (27:30 - 32:30) if > 17:00
  states
  [

    0 on @  ss-00:30
    1 off @  23:50
       #0 off @ sr+00:30 if before 08:00
       #1 off @ 08:00 if before sr+00:30
       #2 on @  ss-00:30 if after 17:00
       #3 on @  17:00 if after ss-00:30
  ]
}

socket
{
  name frnt03
  control_pwr
  {
     board b1
     channel 10
     sense active-low
  }
  monitor_socket
  {
     board b1
     #channel 3
     channel 15
     sense active-low
  }
  monitor_hw_ovr_on
  {
     board b1
     channel 01
     sense active-low
  }
  # on at 30mins before sunrise; random 5mins (27:30 - 32:30) if before 8am (or at 08:00)
  # on at 30mins before sunset; random 5mins (27:30 - 32:30) if after 17:00 (or at 17:00)
  # on at 30mins before sunset; random 5mins (27:30 - 32:30) if > 17:00
  states
  [
       0 on @ 07:15 if before sr+00:30
       1 on @ sr-00:30 if after 07:15
       2 off @ sr+00:30 if before 08:00
       3 off @ 08:00
       4 on @  ss-00:30 if after 17:00
       5 on @  17:00 if after ss-00:30
       6 off @  ss+00:30 if before 21:00
       7 off @  21:00 if before ss+00:30
  ]
}

socket
{
  name gdn04
  control_pwr
  {
     board b1
     channel 11
     sense active-low
  }
  monitor_socket
  {
     board b1
     channel 00
     sense active-low
  }
  monitor_hw_ovr_on
  {
     board b1
     #channel 10
     channel 02
     sense active-low
  }
  # on at 30mins before sunrise; random 5mins (27:30 - 32:30) if before 8am (or at 08:00)
  # on at 30mins before sunset; random 5mins (27:30 - 32:30) if after 17:00 (or at 17:00)
  # on at 30mins before sunset; random 5mins (27:30 - 32:30) if > 17:00
  states
  [
       0 on @ sr-00:30
       1 off @ sr+00:30
       #2 on @ 15:00
       #3 off @ 15:30
       #4 on @  ss-01:30
       #5 off @  ss+00:30
       2 on @  ss-01:30
       3 off @  ss+00:30
       #4 on @ 15:00
       #5 off @ 15:30
  ]
}

